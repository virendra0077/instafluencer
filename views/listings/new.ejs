<% layout('layout/boilerplate') %>

<body class="profile-bg">

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8">

        <div class="card profile-card border-0 shadow-lg">
          <div class="card-body p-4 p-md-5">

            <div class="text-center mb-5">
              <div class="mb-2">
                <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="20" cy="16" r="8" fill="#FF3366"/>
                    <path d="M33.8 35.2C30.9 33.3 26.7 32 20 32C13.3 32 9.1 33.3 6.2 35.2C2.5 37.6 0 42.5 0 48V56H40V48C40 42.5 37.5 37.6 33.8 35.2Z" fill="#FF3366"/>
                </svg>
              </div>
              <h2 class="fw-bold mb-1" style="color: #1A1A1A;">Create Your Profile</h2>
              <p class="text-muted">Join the elite network of brands and creators.</p>
            </div>

            <form action="/listings" method="POST" class="needs-validation" novalidate>

              <div class="mb-4">
                <label class="form-label fw-bold small text-uppercase" style="color: #555;">Full Name / Brand Name</label>
                <div class="input-group">
                  <span class="input-group-text bg-transparent border-end-0"><i class="fa-regular fa-user" style="color: #FF3366;"></i></span>
                  <input type="text" class="form-control border-start-0 ps-0" name="listing[name]" placeholder="e.g. John Doe" required />
                  <div class="invalid-feedback">Please enter your name.</div>
                </div>
              </div>

              <div class="mb-4">
                <label class="form-label fw-bold small text-uppercase" style="color: #555;">Profile Image URL</label>
                <div class="input-group">
                  <span class="input-group-text bg-transparent border-end-0"><i class="fa-regular fa-image" style="color: #FF3366;"></i></span>
                  <input type="url" class="form-control border-start-0 ps-0" name="listing[image]" placeholder="https://image-link.com" />
                </div>
                <div class="form-text text-end">Default used if left empty.</div>
              </div>

              <div class="mb-4">
                <label class="form-label fw-bold small text-uppercase" style="color: #555;">Location</label>
                <div class="input-group">
                  <span class="input-group-text bg-transparent border-end-0"><i class="fa-solid fa-location-dot" style="color: #FF3366;"></i></span>
                  <input type="text" class="form-control border-start-0 ps-0" name="listing[address]" placeholder="Mumbai, India" required />
                  <div class="invalid-feedback">Location is required.</div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <label class="form-label fw-bold small text-uppercase" style="color: #555;">Followers</label>
                  <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0"><i class="fa-solid fa-users" style="color: #FF3366;"></i></span>
                    <input type="number" class="form-control border-start-0 ps-0" name="listing[followers]" min="0" value="0" />
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <label class="form-label fw-bold small text-uppercase" style="color: #555;">Monthly Reach</label>
                  <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0"><i class="fa-solid fa-chart-line" style="color: #FF3366;"></i></span>
                    <input type="number" class="form-control border-start-0 ps-0" name="listing[reach]" min="0" value="0" />
                  </div>
                </div>
              </div>

              <div class="mb-4">
                <label class="form-label fw-bold small text-uppercase" style="color: #555;">About You</label>
                <textarea class="form-control" name="listing[description]" rows="4" placeholder="Briefly describe your niche and content style..." required></textarea>
                <div class="invalid-feedback">Tell us a bit about yourself.</div>
              </div>

              <div class="mb-5">
                <label class="form-label fw-bold small text-uppercase" style="color: #555;">Niche Category</label>
                <select class="form-select" name="listing[type]" required>
                  <option value="">Select category...</option>
                  <option value="family content">Family Content</option>
                  <option value="lifestyle">Lifestyle</option>
                  <option value="fashion">Fashion & Beauty</option>
                  <option value="tech">Tech & Gadgets</option>
                  <option value="mature content">Mature Content</option>
                </select>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-gradient btn-lg py-3 shadow">
                  <i class="fa-solid fa-paper-plane me-2"></i> Launch Profile
                </button>
              </div>

            </form>
          </div>
        </div>

        <div class="text-center mt-4">
            <p class="text-muted small">Need help? <a href="#" style="color: #FF3366; text-decoration: none;">Contact Support</a></p>
        </div>

      </div>
    </div>
  </div>

</body>