<% layout('layout/boilerplate') %> 

<div class="profiles-page">
  <div class="container mt-5">
    
    <!-- Page Header -->
    <div class="profiles-header">
      <div class="header-content">
        <div>
          <h2 class="page-title">
            <i class="fa-solid fa-users me-2"></i>
            Discover Influencers
          </h2>
          <p class="page-subtitle">Connect with verified creators and grow your brand</p>
        </div>
        <a href="/listings/new" class="btn-create-profile">
          <i class="fa-solid fa-user-plus me-2"></i>
          Join as Creator
        </a>
      </div>
      
      <!-- Stats Bar -->
      <div class="stats-bar">
        <div class="stat-item">
          <i class="fa-solid fa-users stat-icon"></i>
          <div>
            <div class="stat-value"><%= allListings.length %></div>
            <div class="stat-label">Active Creators</div>
          </div>
        </div>
        <div class="stat-item">
          <i class="fa-solid fa-fire stat-icon"></i>
          <div>
            <div class="stat-value">100%</div>
            <div class="stat-label">Verified</div>
          </div>
        </div>
        <div class="stat-item">
          <i class="fa-solid fa-handshake stat-icon"></i>
          <div>
            <div class="stat-value">Live</div>
            <div class="stat-label">Collaborations</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Profiles Grid -->
    <div class="row g-4">
      <% for (let list of allListings) { %>
        <div class="col-lg-3 col-md-4 col-sm-6">
          <a href="/listings/<%= list._id %>" class="profile-card-link">
            <div class="card profile-card-modern shadow-sm h-100">
              
              <!-- Profile Image with Overlay -->
              <div class="profile-image-wrapper">
                <img src="<%= list.image %>" class="profile-image" alt="<%= list.name %>">
                <div class="profile-overlay">
                  <span class="view-profile-btn">
                    <i class="fa-solid fa-arrow-right"></i>
                  </span>
                </div>
              </div>

              <div class="card-body p-3">
                
                <!-- Name and Category -->
                <div class="profile-header-info">
                  <h5 class="profile-name"><%= list.name %></h5>
                  <span class="profile-category-badge">
                    <i class="fa-solid fa-tag me-1"></i>
                    <%= list.type %>
                  </span>
                </div>

                <!-- Stats Grid -->
                <div class="profile-stats-grid">
                  <div class="stat-box">
                    <i class="fa-solid fa-user-group stat-box-icon"></i>
                    <div>
                      <div class="stat-box-value"><%= list.followers %></div>
                      <div class="stat-box-label">Followers</div>
                    </div>
                  </div>
                  <div class="stat-box">
                    <i class="fa-solid fa-chart-line stat-box-icon"></i>
                    <div>
                      <div class="stat-box-value"><%= list.reach %></div>
                      <div class="stat-box-label">Reach</div>
                    </div>
                  </div>
                </div>

                <!-- Location -->
                <div class="profile-location">
                  <i class="fa-solid fa-location-dot location-icon me-2"></i>
                  <%= list.address %>
                </div>

              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>

    <!-- Empty State -->
    <% if (allListings.length === 0) { %>
      <div class="empty-state">
        <div class="empty-state-icon">
          <i class="fa-solid fa-users-slash"></i>
        </div>
        <h3 class="empty-state-title">No Creators Yet</h3>
        <p class="empty-state-text">Be the first to join our platform!</p>
        <a href="/listings/new" class="btn-gradient">
          <i class="fa-solid fa-rocket me-2"></i>
          Create Your Profile
        </a>
      </div>
    <% } %>

  </div>
</div>

<style>
/* =========================
   PROFILES PAGE STYLES
   ========================= */

.profiles-page {
  background: var(--bg-primary);
  min-height: 100vh;
  padding-bottom: 4rem;
}

/* Page Header */
.profiles-header {
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-xl);
  padding: 2rem;
  margin-bottom: 2rem;
  position: relative;
  overflow: hidden;
}

.profiles-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--primary), var(--accent-cyan));
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.page-title {
  font-size: 2rem;
  font-weight: 800;
  color: var(--text-primary);
  margin: 0;
  display: flex;
  align-items: center;
}

.page-title i {
  color: var(--primary);
}

.page-subtitle {
  color: var(--text-secondary);
  font-size: 1.05rem;
  margin: 0.5rem 0 0 0;
}

/* Create Profile Button */
.btn-create-profile {
  background: linear-gradient(135deg, var(--primary), var(--accent-cyan));
  color: white;
  padding: 0.875rem 2rem;
  border-radius: var(--radius-md);
  font-weight: 600;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
  border: none;
}

.btn-create-profile:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(79, 70, 229, 0.4);
  color: white;
}

/* Stats Bar */
.stats-bar {
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 1.5rem;
  background: var(--bg-elevated);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  flex: 1;
  min-width: 200px;
  transition: all 0.3s ease;
}

.stat-item:hover {
  border-color: var(--primary);
  transform: translateY(-2px);
}

.stat-icon {
  font-size: 2rem;
  color: var(--accent-cyan);
}

.stat-value {
  font-size: 1.5rem;
  font-weight: 800;
  color: var(--text-primary);
  line-height: 1;
}

.stat-label {
  font-size: 0.85rem;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-top: 0.25rem;
}

/* Profile Card Link */
.profile-card-link {
  text-decoration: none;
  display: block;
  height: 100%;
}

/* Modern Profile Card */
.profile-card-modern {
  background: var(--bg-secondary) !important;
  border: 1px solid var(--border-color) !important;
  border-radius: var(--radius-lg);
  overflow: hidden;
  transition: all 0.3s ease;
  position: relative;
}

.profile-card-modern::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--primary), var(--accent-cyan));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.profile-card-modern:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-xl) !important;
  border-color: var(--primary) !important;
}

.profile-card-modern:hover::before {
  opacity: 1;
}

/* Profile Image */
.profile-image-wrapper {
  position: relative;
  height: 240px;
  overflow: hidden;
  background: var(--bg-elevated);
}

.profile-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.profile-card-modern:hover .profile-image {
  transform: scale(1.1);
}

/* Profile Overlay */
.profile-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(79, 70, 229, 0.9), rgba(6, 182, 212, 0.9));
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.profile-card-modern:hover .profile-overlay {
  opacity: 1;
}

.view-profile-btn {
  width: 60px;
  height: 60px;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  color: var(--primary);
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.profile-card-modern:hover .view-profile-btn {
  transform: scale(1);
}

/* Profile Header Info */
.profile-header-info {
  margin-bottom: 1rem;
}

.profile-name {
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 0.5rem 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.profile-category-badge {
  display: inline-flex;
  align-items: center;
  background: linear-gradient(135deg, var(--primary-light), var(--accent-cyan-light));
  color: var(--primary);
  padding: 0.4rem 0.8rem;
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Profile Stats Grid */
.profile-stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0.75rem;
  margin-bottom: 1rem;
}

.stat-box {
  background: var(--bg-elevated);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: 0.875rem;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  transition: all 0.3s ease;
}

.stat-box:hover {
  border-color: var(--accent-cyan);
  background: var(--accent-cyan-light);
}

.stat-box-icon {
  font-size: 1.5rem;
  color: var(--accent-cyan);
}

.stat-box-value {
  font-size: 1rem;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1;
}

.stat-box-label {
  font-size: 0.7rem;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.3px;
}

/* Profile Location */
.profile-location {
  display: flex;
  align-items: center;
  color: var(--text-secondary);
  font-size: 0.9rem;
  padding: 0.75rem;
  background: var(--bg-elevated);
  border-radius: var(--radius-sm);
  border: 1px solid var(--border-color);
}

.profile-location i,
.location-icon {
  color: var(--accent-cyan) !important;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 5rem 2rem;
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-xl);
  margin-top: 2rem;
}

.empty-state-icon {
  font-size: 5rem;
  color: var(--text-tertiary);
  margin-bottom: 1.5rem;
}

.empty-state-title {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 1rem;
}

.empty-state-text {
  font-size: 1.1rem;
  color: var(--text-secondary);
  margin-bottom: 2rem;
}

/* Responsive */
@media (max-width: 768px) {
  .header-content {
    flex-direction: column;
    align-items: flex-start;
  }

  .page-title {
    font-size: 1.5rem;
  }

  .btn-create-profile {
    width: 100%;
    justify-content: center;
  }

  .stats-bar {
    flex-direction: column;
    gap: 1rem;
  }

  .stat-item {
    min-width: 100%;
  }

  .profile-image-wrapper {
    height: 200px;
  }
}
</style>