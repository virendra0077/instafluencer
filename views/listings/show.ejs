<% layout("/layout/boilerplate.ejs") %>

<div class="container listing-container">
    <div class="row">
        <div class="col-12">
            <h2 class="listing-title mt-4">Details of <%= listing.name %></h2>
        </div>

        <div class="col-12 col-lg-8 mb-4">
            <div class="card card-listing">
                <img src="<%= listing.image %>" class="card-img-top" alt="listing image">
                <div class="card-body p-4">
                    <% if (listing.owner) { %>
                        <p class="text-muted mb-2">Owned by <b><i>@<%= listing.owner.username %></i></b></p>
                    <% } else { %>
                        <p class="text-muted mb-2">Owned by <b><i>@Unknown</i></b></p>
                    <% } %>
                    <hr>
                    <p class="card-text"><%= listing.description %></p>
                    
                    <div class="d-flex flex-wrap gap-4 mt-3">
                        <div><small class="text-muted d-block">Followers</small><strong><%= listing.followers %></strong></div>
                        <div><small class="text-muted d-block">Reach</small><strong><%= listing.reach %></strong></div>
                        <div><small class="text-muted d-block">Category</small><strong><%= listing.type %></strong></div>
                    </div>
                    
                    <p class="mt-3 text-secondary">
                      <i class="fa-solid fa-location-dot me-2"></i><%= listing.address %>
                    </p>

                    <% if (currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
                        <div class="d-flex gap-2 mt-4">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-brand">Edit Profile</a>
                            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <% if (currUser) { %>
                <div class="card border-0 shadow-sm p-4">
                    <h5 class="fw-bold">Leave a Review</h5>
                    <form method="POST" action="/listings/<%= listing._id %>/reviews">
                        
                        <fieldset class="starability-slot mb-3">
                            <input type="radio" id="r5" name="review[rating]" value="5"><label for="r5"></label>
                            <input type="radio" id="r4" name="review[rating]" value="4"><label for="r4"></label>
                            <input type="radio" id="r3" name="review[rating]" value="3"><label for="r3"></label>
                            <input type="radio" id="r2" name="review[rating]" value="2"><label for="r2"></label>
                            <input type="radio" id="r1" name="review[rating]" value="1" required><label for="r1"></label>
                        </fieldset>

                        <textarea
                            name="review[comment]"
                            class="form-control review-form-input"
                            placeholder="Share your experience with this influencer..."
                            rows="4"
                            required
                        ></textarea>

                        <button class="btn btn-brand w-100 mt-3">Submit Review</button>
                    </form>
                </div>
            <% } else { %>
                <div class="alert alert-light border text-center">
                    <p class="mb-0">Please <a href="/login" class="fw-bold">Login</a> to leave a review.</p>
                </div>
            <% } %>
        </div>
    </div>

    <hr class="my-5">

    <div class="row">
        <div class="col-12">
            <h4 class="fw-bold mb-4">
              <i class="fa-solid fa-comments me-2"></i>Brand Reviews (<%= listing.reviews.length %>)
            </h4>
            <div class="reviews-container">
                <% for (let review of listing.reviews) { %>
                    <div class="review-card">
                        <div class="review-header">
                            <p class="review-author">@<%= review.author.username %></p>
                            <p class="starability-result" data-rating="<%= review.rating %>"></p>
                        </div>
                        <p class="review-comment">"<%= review.comment %>"</p>
                        <% if (currUser && currUser._id.equals(review.author._id)) { %>
                            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-delete-review"><i class="fa-solid fa-trash-can me-1"></i> Delete</button>
                            </form>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>