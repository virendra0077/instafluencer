<div class="container mt-3">
    <div class="row">
        <div class="col-lg-6 col-md-8 mx-auto">
            
            <% if(success && success.length) { %>
            <div class="alert alert-success alert-dismissible fade show flash-alert flash-success shadow-sm" role="alert">
                <div class="d-flex align-items-center">
                    <div class="flash-icon-wrapper flash-icon-success me-3">
                        <i class="fa-solid fa-circle-check fs-4"></i>
                    </div>
                    <div class="flex-grow-1">
                        <strong class="flash-title">Success!</strong>
                        <span class="flash-message"><%= success %></span>
                    </div>
                </div>
                <button type="button" class="btn-close flash-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

            <% if(error && error.length) { %>
            <div class="alert alert-danger alert-dismissible fade show flash-alert flash-error shadow-sm" role="alert">
                <div class="d-flex align-items-center">
                    <div class="flash-icon-wrapper flash-icon-error me-3">
                        <i class="fa-solid fa-circle-exclamation fs-4"></i>
                    </div>
                    <div class="flex-grow-1">
                        <strong class="flash-title">Wait!</strong>
                        <span class="flash-message"><%= error %></span>
                    </div>
                </div>
                <button type="button" class="btn-close flash-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

        </div>
    </div>
</div>

<style>
/* =========================
   FLASH MESSAGES STYLES
   ========================= */

.flash-alert {
  border: none !important;
  border-radius: var(--radius-md);
  padding: 1.25rem 1.5rem;
  margin-bottom: 1.5rem;
  position: relative;
  overflow: hidden;
  animation: slideInDown 0.4s ease-out;
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Success Alert */
.flash-success {
  background: linear-gradient(135deg, #10B981, #059669) !important;
  color: white !important;
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.flash-success::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4px;
  height: 100%;
  background: rgba(255, 255, 255, 0.3);
}

/* Error Alert */
.flash-error {
  background: linear-gradient(135deg, #EF4444, #DC2626) !important;
  color: white !important;
  box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
}

.flash-error::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4px;
  height: 100%;
  background: rgba(255, 255, 255, 0.3);
}

/* Icon Wrapper */
.flash-icon-wrapper {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  flex-shrink: 0;
}

.flash-icon-success {
  background: rgba(255, 255, 255, 0.2);
}

.flash-icon-error {
  background: rgba(255, 255, 255, 0.2);
}

.flash-icon-wrapper i {
  color: white;
}

/* Text Styling */
.flash-title {
  display: block;
  font-weight: 700;
  font-size: 1rem;
  margin-bottom: 0.25rem;
}

.flash-message {
  display: block;
  font-size: 0.95rem;
  opacity: 0.95;
}

/* Close Button */
.flash-close {
  filter: brightness(0) invert(1);
  opacity: 0.8;
  transition: opacity 0.3s ease;
}

.flash-close:hover {
  opacity: 1;
}

/* Responsive */
@media (max-width: 768px) {
  .flash-alert {
    padding: 1rem 1.25rem;
  }
  
  .flash-icon-wrapper {
    width: 35px;
    height: 35px;
  }
  
  .flash-icon-wrapper i {
    font-size: 1rem !important;
  }
}
</style>