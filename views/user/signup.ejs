<% layout("/layout/boilerplate.ejs") %>

<body class="profile-bg">
  <div class="container d-flex align-items-center justify-content-center" style="min-height: 90vh; padding-top: 2rem; padding-bottom: 2rem;">
    <div class="row w-100 justify-content-center">
      <div class="col-lg-5 col-md-8 col-sm-11">
        
        <div class="card auth-card border-0 shadow-lg p-4 p-md-5">
          
          <div class="text-center mb-4">
            <div class="auth-icon-wrapper mb-3">
              <i class="fa-solid fa-user-plus fa-2x"></i>
            </div>
            <h2 class="fw-bold auth-title mb-1">Create Account</h2>
            <p class="auth-subtitle small">Join the community of top-tier brands and creators</p>
          </div>

          <form action="/signup" method="POST" novalidate class="needs-validation">
            
            <div class="mb-4">
              <label for="username" class="form-label fw-bold small text-uppercase">Username</label>
              <div class="input-group auth-input-group">
                <span class="input-group-text border-end-0">
                  <i class="fa-solid fa-at"></i>
                </span>
                <input name="username" type="text" id="username" class="form-control border-start-0 ps-0" required placeholder="Choose a unique username">
                <div class="invalid-feedback">Please choose a username.</div>
              </div>
            </div>

            <div class="mb-4">
              <label for="email" class="form-label fw-bold small text-uppercase">Email Address</label>
              <div class="input-group auth-input-group">
                <span class="input-group-text border-end-0">
                  <i class="fa-regular fa-envelope"></i>
                </span>
                <input name="email" type="email" id="email" class="form-control border-start-0 ps-0" required placeholder="name@example.com">
                <div class="invalid-feedback">Please enter a valid email.</div>
              </div>
            </div>

            <div class="mb-4">
              <label for="password" class="form-label fw-bold small text-uppercase">Password</label>
              <div class="input-group auth-input-group">
                <span class="input-group-text border-end-0">
                  <i class="fa-solid fa-shield-halved"></i>
                </span>
                <input name="password" type="password" id="password" class="form-control border-start-0 ps-0" required placeholder="Create a strong password">
                <div class="invalid-feedback">Password is required.</div>
              </div>
              <div class="form-text small auth-helper-text">Must be at least 8 characters long.</div>
            </div>

            <div class="d-grid gap-2 mt-4">
              <button class="btn btn-gradient btn-lg py-3 shadow-sm border-0 auth-submit-btn">
                Get Started
              </button>
            </div>

          </form>

          <div class="d-flex align-items-center my-4 auth-divider">
            <hr class="flex-grow-1">
            <span class="mx-2 small">Already a member?</span>
            <hr class="flex-grow-1">
          </div>

          <div class="text-center">
            <a href="/login" class="fw-bold text-decoration-none auth-link">
                Log In to Your Account
            </a>
          </div>

        </div>

        <p class="text-center auth-terms small mt-4">
            By signing up, you agree to our <a href="#" class="auth-link"><strong>Terms</strong></a> and <a href="#" class="auth-link"><strong>Privacy Policy</strong></a>.
        </p>

      </div>
    </div>
  </div>
</body>

<style>
/* =========================
   AUTH PAGES STYLES
   ========================= */

.auth-card {
  border-radius: 1.5rem;
  background: var(--bg-secondary);
  border: 1px solid var(--border-color) !important;
  position: relative;
  overflow: hidden;
}

.auth-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary), var(--accent-cyan));
}

/* Auth Icon */
.auth-icon-wrapper {
  width: 80px;
  height: 80px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--primary-light);
}

.auth-icon-wrapper i {
  color: var(--primary);
}

/* Auth Titles */
.auth-title {
  color: var(--text-primary);
}

.auth-subtitle {
  color: var(--text-secondary);
}

/* Auth Input Groups */
.auth-input-group {
  height: 50px;
}

.auth-input-group .input-group-text {
  background: var(--bg-elevated);
  border-color: var(--border-color);
  border-radius: 0.75rem 0 0 0.75rem;
}

.auth-input-group .input-group-text i {
  color: var(--primary);
}

.auth-input-group .form-control {
  background: var(--bg-elevated);
  border-color: var(--border-color);
  border-radius: 0 0.75rem 0.75rem 0;
  height: 100%;
  color: var(--text-primary);
}

.auth-input-group .form-control:focus {
  background: var(--bg-secondary);
  border-color: var(--primary);
  box-shadow: 0 0 0 4px var(--primary-light);
}

.auth-input-group .form-control::placeholder {
  color: var(--text-tertiary);
}

/* Form Labels */
.auth-card label {
  color: var(--text-secondary);
}

/* Helper Text */
.auth-helper-text {
  color: var(--text-tertiary);
  margin-top: 0.5rem;
}

/* Submit Button */
.auth-submit-btn {
  font-weight: 600;
}

/* Divider */
.auth-divider hr {
  border-color: var(--border-color);
  opacity: 1;
}

.auth-divider span {
  color: var(--text-secondary);
}

/* Links */
.auth-link {
  color: var(--primary) !important;
  transition: color 0.3s ease;
}

.auth-link:hover {
  color: var(--accent-cyan) !important;
}

/* Terms Text */
.auth-terms {
  color: var(--text-secondary);
  max-width: 400px;
  margin-left: auto;
  margin-right: auto;
}

.auth-terms strong {
  color: var(--text-primary);
}
</style>