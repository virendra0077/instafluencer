<% layout("/layout/boilerplate.ejs") %>

<body class="profile-bg">
  <div class="container d-flex align-items-center justify-content-center" style="min-height: 90vh; padding-top: 2rem; padding-bottom: 2rem;">
    <div class="row w-100 justify-content-center">
      <div class="col-lg-5 col-md-8 col-sm-11">
        
        <div class="card border-0 shadow-lg p-4 p-md-5" style="border-radius: 1.5rem; background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(15px);">
          
          <div class="text-center mb-4">
            <div class="mb-3 d-inline-block p-3 rounded-circle" style="background: rgba(255, 51, 102, 0.1);">
              <i class="fa-solid fa-user-plus fa-2x" style="color: #FF3366;"></i>
            </div>
            <h2 class="fw-bold text-dark mb-1">Create Account</h2>
            <p class="text-muted small">Join the community of top-tier brands and creators</p>
          </div>

          <form action="/signup" method="POST" novalidate class="needs-validation">
            
            <div class="mb-4">
              <label for="username" class="form-label fw-bold small text-uppercase text-muted">Username</label>
              <div class="input-group">
                <span class="input-group-text bg-white border-end-0" style="border-radius: 0.75rem 0 0 0.75rem;">
                  <i class="fa-solid fa-at" style="color: #FF3366;"></i>
                </span>
                <input name="username" type="text" id="username" class="form-control border-start-0 ps-0" style="border-radius: 0 0.75rem 0.75rem 0; height: 50px;" required placeholder="Choose a unique username">
                <div class="invalid-feedback">Please choose a username.</div>
              </div>
            </div>

            <div class="mb-4">
              <label for="email" class="form-label fw-bold small text-uppercase text-muted">Email Address</label>
              <div class="input-group">
                <span class="input-group-text bg-white border-end-0" style="border-radius: 0.75rem 0 0 0.75rem;">
                  <i class="fa-regular fa-envelope" style="color: #FF3366;"></i>
                </span>
                <input name="email" type="email" id="email" class="form-control border-start-0 ps-0" style="border-radius: 0 0.75rem 0.75rem 0; height: 50px;" required placeholder="name@example.com">
                <div class="invalid-feedback">Please enter a valid email.</div>
              </div>
            </div>

            <div class="mb-4">
              <label for="password" class="form-label fw-bold small text-uppercase text-muted">Password</label>
              <div class="input-group">
                <span class="input-group-text bg-white border-end-0" style="border-radius: 0.75rem 0 0 0.75rem;">
                  <i class="fa-solid fa-shield-halved" style="color: #FF3366;"></i>
                </span>
                <input name="password" type="password" id="password" class="form-control border-start-0 ps-0" style="border-radius: 0 0.75rem 0.75rem 0; height: 50px;" required placeholder="Create a strong password">
                <div class="invalid-feedback">Password is required.</div>
              </div>
              <div class="form-text small">Must be at least 8 characters long.</div>
            </div>

            <div class="d-grid gap-2 mt-4">
              <button class="btn btn-gradient btn-lg py-3 shadow-sm border-0" style="font-weight: 600;">
                Get Started
              </button>
            </div>

          </form>

          <div class="d-flex align-items-center my-4">
            <hr class="flex-grow-1 text-muted">
            <span class="mx-2 small text-muted">Already a member?</span>
            <hr class="flex-grow-1 text-muted">
          </div>

          <div class="text-center">
            <a href="/login" class="fw-bold text-decoration-none" style="color: #FF3366;">
                Log In to Your Account
            </a>
          </div>

        </div>

        <p class="text-center text-muted small mt-4" style="max-width: 400px; margin-left: auto; margin-right: auto;">
            By signing up, you agree to our <strong>Terms</strong> and <strong>Privacy Policy</strong>.
        </p>

      </div>
    </div>
  </div>
</body>