<% layout("/layout/boilerplate.ejs") %>

<body class="profile-bg">
  <div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row w-100 justify-content-center">
      <div class="col-lg-5 col-md-7 col-sm-10">
        
        <div class="card border-0 shadow-lg p-4 p-md-5" style="border-radius: 1.5rem; background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px);">
          
          <div class="text-center mb-4">
            <div class="mb-3 d-inline-block p-3 rounded-circle" style="background: rgba(255, 51, 102, 0.1);">
              <i class="fa-solid fa-lock-open fa-2x" style="color: #FF3366;"></i>
            </div>
            <h2 class="fw-bold text-dark">Welcome Back</h2>
            <p class="text-muted small">Enter your credentials to access your account</p>
          </div>

          <form action="/login" method="POST" novalidate class="needs-validation">
            
            <div class="mb-4">
              <label for="username" class="form-label fw-bold small text-uppercase text-muted">Username</label>
              <div class="input-group">
                <span class="input-group-text bg-white border-end-0" style="border-radius: 0.75rem 0 0 0.75rem;">
                  <i class="fa-regular fa-user" style="color: #FF3366;"></i>
                </span>
                <input name="username" type="text" id="username" class="form-control border-start-0 ps-0" style="border-radius: 0 0.75rem 0.75rem 0; height: 50px;" required placeholder="Enter your username">
                <div class="invalid-feedback">Please enter a valid username.</div>
              </div>
            </div>

            <div class="mb-4">
              <div class="d-flex justify-content-between">
                <label for="password" class="form-label fw-bold small text-uppercase text-muted">Password</label>
                <a href="#" class="small text-decoration-none" style="color: #FF3366;">Forgot?</a>
              </div>
              <div class="input-group">
                <span class="input-group-text bg-white border-end-0" style="border-radius: 0.75rem 0 0 0.75rem;">
                  <i class="fa-solid fa-key" style="color: #FF3366;"></i>
                </span>
                <input name="password" type="password" id="password" class="form-control border-start-0 ps-0" style="border-radius: 0 0.75rem 0.75rem 0; height: 50px;" required placeholder="••••••••">
                <div class="invalid-feedback">Please enter your password.</div>
              </div>
            </div>

            <div class="d-grid gap-2 mt-5">
              <button class="btn btn-gradient btn-lg py-3 shadow-sm">
                Login to Account
              </button>
            </div>

          </form>

          <div class="text-center mt-4">
            <p class="small text-muted">Don't have an account? 
              <a href="/signup" class="fw-bold text-decoration-none" style="color: #FF3366;">Sign Up</a>
            </p>
          </div>

        </div>
        
        <div class="text-center mt-3">
            <a href="/listings" class="text-muted small text-decoration-none">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Explorers
            </a>
        </div>

      </div>
    </div>
  </div>
</body>