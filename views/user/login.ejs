<% layout("/layout/boilerplate.ejs") %>

<body class="profile-bg">
  <div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row w-100 justify-content-center">
      <div class="col-lg-5 col-md-7 col-sm-10">
        
        <div class="card auth-card border-0 shadow-lg p-4 p-md-5">
          
          <div class="text-center mb-4">
            <div class="auth-icon-wrapper mb-3">
              <i class="fa-solid fa-lock-open fa-2x"></i>
            </div>
            <h2 class="fw-bold auth-title">Welcome Back</h2>
            <p class="auth-subtitle small">Enter your credentials to access your account</p>
          </div>

          <form action="/login" method="POST" novalidate class="needs-validation">
            
            <div class="mb-4">
              <label for="username" class="form-label fw-bold small text-uppercase">Username</label>
              <div class="input-group auth-input-group">
                <span class="input-group-text border-end-0">
                  <i class="fa-regular fa-user"></i>
                </span>
                <input name="username" type="text" id="username" class="form-control border-start-0 ps-0" required placeholder="Enter your username">
                <div class="invalid-feedback">Please enter a valid username.</div>
              </div>
            </div>

            <div class="mb-4">
              <div class="d-flex justify-content-between">
                <label for="password" class="form-label fw-bold small text-uppercase">Password</label>
                <a href="#" class="small text-decoration-none auth-link">Forgot?</a>
              </div>
              <div class="input-group auth-input-group">
                <span class="input-group-text border-end-0">
                  <i class="fa-solid fa-key"></i>
                </span>
                <input name="password" type="password" id="password" class="form-control border-start-0 ps-0" required placeholder="••••••••">
                <div class="invalid-feedback">Please enter your password.</div>
              </div>
            </div>

            <div class="d-grid gap-2 mt-5">
              <button class="btn btn-gradient btn-lg py-3 shadow-sm auth-submit-btn">
                Login to Account
              </button>
            </div>

          </form>

          <div class="text-center mt-4">
            <p class="small auth-subtitle">Don't have an account? 
              <a href="/signup" class="fw-bold text-decoration-none auth-link">Sign Up</a>
            </p>
          </div>

        </div>
        
        <div class="text-center mt-3">
            <a href="/listings" class="auth-back-link small text-decoration-none">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Explorers
            </a>
        </div>

      </div>
    </div>
  </div>
</body>

<style>
/* =========================
   AUTH PAGES STYLES
   ========================= */

.auth-card {
  border-radius: 1.5rem;
  background: var(--bg-secondary);
  border: 1px solid var(--border-color) !important;
  position: relative;
  overflow: hidden;
}

.auth-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary), var(--accent-cyan));
}

/* Auth Icon */
.auth-icon-wrapper {
  width: 80px;
  height: 80px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--primary-light);
}

.auth-icon-wrapper i {
  color: var(--primary);
}

/* Auth Titles */
.auth-title {
  color: var(--text-primary);
}

.auth-subtitle {
  color: var(--text-secondary);
}

/* Auth Input Groups */
.auth-input-group {
  height: 50px;
}

.auth-input-group .input-group-text {
  background: var(--bg-elevated);
  border-color: var(--border-color);
  border-radius: 0.75rem 0 0 0.75rem;
}

.auth-input-group .input-group-text i {
  color: var(--primary);
}

.auth-input-group .form-control {
  background: var(--bg-elevated);
  border-color: var(--border-color);
  border-radius: 0 0.75rem 0.75rem 0;
  height: 100%;
  color: var(--text-primary);
}

.auth-input-group .form-control:focus {
  background: var(--bg-secondary);
  border-color: var(--primary);
  box-shadow: 0 0 0 4px var(--primary-light);
}

.auth-input-group .form-control::placeholder {
  color: var(--text-tertiary);
}

/* Form Labels */
.auth-card label {
  color: var(--text-secondary);
}

/* Submit Button */
.auth-submit-btn {
  font-weight: 600;
}

/* Links */
.auth-link {
  color: var(--primary) !important;
  transition: color 0.3s ease;
}

.auth-link:hover {
  color: var(--accent-cyan) !important;
}

/* Back Link */
.auth-back-link {
  color: var(--text-secondary);
  transition: color 0.3s ease;
}

.auth-back-link:hover {
  color: var(--primary);
}
</style>